<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client Hub </title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

    <!-- Basic Icons -->
    <link href="https://cdn.boxicons.com/3.0.8/fonts/basic/boxicons.min.css" rel="stylesheet">
    <!-- Filled Icons -->
    <link href="https://cdn.boxicons.com/3.0.8/fonts/filled/boxicons-filled.min.css" rel="stylesheet">
    <!-- Brand Icons -->
    <link href="https://cdn.boxicons.com/3.0.8/fonts/brands/boxicons-brands.min.css" rel="stylesheet">
    <!-- Enable Animation -->
    <link href="https://cdn.boxicons.com/animations.min.css" rel="stylesheet">

    @* <link href="https://cdn.datatables.net/2.3.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/autofill/2.7.1/css/autoFill.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/3.2.6/css/buttons.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/fixedcolumns/5.0.5/css/fixedColumns.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/fixedheader/4.0.5/css/fixedHeader.dataTables.min.css" rel="stylesheet"> *@







    <link rel="preload" href="~/AdminLTE/css/adminlte.css" as="style" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css"
          integrity="sha256-tXJfXfp6Ewt1ilPzLDtQnJV4hclT9XuaZUKyUvmyr+Q="
          crossorigin="anonymous"
          media="print"
          onload="this.media='all'" />
    <link rel="stylesheet" href="~/adminLTE/lib/overlayscrollbars/styles/overlayscrollbars.min.css" />
    <link rel="stylesheet" href="~/adminLTE/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/adminLTE/css/adminlte.css" />
    <link rel="stylesheet" href="~/adminLTE/lib/apexcharts/apexcharts.css" />
    <link rel="stylesheet" href="~/adminLTE/lib/jsvectormap/css/jsvectormap.min.css" />

    <!-- DataTables -->
    <link rel="stylesheet" href="~/adminLTE/lib/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/adminLTE/lib/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/adminLTE/lib/datatables-buttons/css/buttons.bootstrap4.min.css">



    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClientHubPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand brand-link">
                    <img src="https://www.bcity.me/web/image/website/1/logo/Welcome%20to%20Binary%20City?unique=b394e15" width="100" />
                </a>
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Client Hub</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contacts" asp-action="Index">Contacts</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <!--begin::App Content Header-->
        <div class="app-content-header">
            <!--begin::Container-->
            <div class="container-fluid">
                <!--begin::Row-->
                <div class="row">
                    <div class="col-sm-6"><h3 class="mb-0">@ViewData["Header"]</h3></div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-end">
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                            @if (!string.IsNullOrEmpty(ViewData["CurrentHeader"]?.ToString()))
                            {
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["CurrentHeader"]</li>
                            }
                        </ol>
                    </div>
                </div>
                <!--end::Row-->
            </div>
            <!--end::Container-->
        </div>
        <!--end::App Content Header-->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Client hub by  <a href="https://www.bcity.me/" target="_blank">Binary City</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.7/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/autofill/2.7.1/js/dataTables.autoFill.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/5.0.5/js/dataTables.fixedColumns.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/4.0.5/js/dataTables.fixedHeader.min.js"></script> *@






    <script src="~/adminLTE/lib/overlayscrollbars/browser/overlayscrollbars.browser.es6.min.js"></script>
    <script src="~/adminLTE/lib/popperjs/umd/popper.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="~/adminLTE/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminLTE/lib/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/adminLTE/lib/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/adminLTE/lib/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/adminLTE/lib/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/adminLTE/lib/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/adminLTE/lib/jszip/jszip.min.js"></script>
    <script src="~/adminLTE/lib/pdfmake/pdfmake.min.js"></script>
    <script src="~/adminLTE/lib/pdfmake/vfs_fonts.js"></script>
    <script src="~/adminLTE/lib/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/adminLTE/lib/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/adminLTE/lib/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/adminLTE/js/adminlte.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js" crossorigin="anonymous"></script>
    <script>
        new Sortable(document.querySelector('.connectedSortable'), {
          group: 'shared',
          handle: '.card-header',
        });

        const cardHeaders = document.querySelectorAll('.connectedSortable .card-header');
        cardHeaders.forEach((cardHeader) => {
          cardHeader.style.cursor = 'move';
        });
    </script>



    <script>
        $(function () {
          $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": true, "paging": true, "ordering": true,
            "info": true, "pageLength": 10, "lengthMenu": [5, 10, 25, 50],
            // "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          });//.buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

          $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>



    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> *@


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
